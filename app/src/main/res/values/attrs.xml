    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PlaceholderView">
        <attr name="mode">
            <enum name="empty" value="0"/>
            <enum name="loading" value="1"/>
        </attr>
        <attr name="empty_icon" format="reference"/>
        <attr name="empty_message" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="DelEditText">
        <attr name="EditTextColor" format="color" />
        <attr name="EditHint" format="string" />
        <attr name="EditHintColor" format="color" />
        <attr name="Image" format="reference" />
    </declare-styleable>

    <!-- 流式布局 -->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

