<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--下拉-->
    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="-200dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="46dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cewefsdfsdfsdfsdf"
                android:textColor="@color/color_black" />
        </LinearLayout>
    </RelativeLayout>
    <!--  -->


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_share_change">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="55dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_share_but"
            android:text="搜商品"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/btn_search"
            android:background="@drawable/bg_share_text"
            android:hint="宝贝名称关键字"
            android:lines="1"
            android:paddingLeft="35dp"
            android:textColor="@color/title_color_three"
            android:textColorHint="#d1d1d1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_search" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_share_change">

        <Button
            android:id="@+id/button2"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_share_but2"
            android:text="全部" />

        <Button
            android:id="@+id/button3"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/button2"
            android:background="@drawable/bg_share_but2"
            android:text="女装" />

        <Button
            android:id="@+id/button4"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/button3"
            android:background="@drawable/bg_share_but2"
            android:text="女装" />

        <Button
            android:id="@+id/button5"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/button4"
            android:background="@drawable/bg_share_but2"
            android:text="女装" />

        <Button
            android:id="@+id/button6"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/button5"
            android:background="@drawable/bg_share_but2"
            android:text="女装" />

        <Button
            android:id="@+id/button7"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/button6"
            android:background="@drawable/bg_share_but2"
            android:text="女装" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/button7"
            android:background="@drawable/t8" />

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/tao_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/nointnet"
            android:gravity="center"
            android:paddingTop="100dp"
            android:text="@string/nointnet"
            android:textColor="@color/title_color_six"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progressDrawable="@drawable/progress" />
    </FrameLayout>

</LinearLayout>
