<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/home_bg"
    android:layout_height="match_parent">

    <include
        android:id="@+id/one_title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/view_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/one_title"
        android:background="@color/home_bg"
        android:paddingBottom="50dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_lb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="温馨提示"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/send_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/Black_transparent_black_percent_45"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_circle_left" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_circle_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_qianhui" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send_line"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/send_name"
                    android:textColor="@color/Black_transparent_black_percent_60"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/value_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/name"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/Black_transparent_black_percent_75"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_qianhui" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send_line"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="@string/send_phone"
                    android:textColor="@color/Black_transparent_black_percent_60"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/value_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tel"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/Black_transparent_black_percent_75"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_qianhui" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send_line"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="广告分类"
                    android:textColor="@color/Black_transparent_black_percent_60"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/value_type"
                    style="@style/alert_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/type"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:popupBackground="@color/transparent"
                    android:spinnerMode="dialog"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/value_typ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/type"
                    android:gravity="right"
                    android:paddingBottom="15dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/Black_transparent_black_percent_75" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_centerVertical="true"
                    android:background="@color/color_qianhui" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/send_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="广告需求"
                    android:textColor="@color/Black_transparent_black_percent_60"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/value_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_money_get"
                    android:layout_toRightOf="@id/desc"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:textColor="@color/Black_transparent_black_percent_75" />

                <ImageView
                    android:id="@+id/arrow_money_get"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/me_arrow_right" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/home_bg" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/view_nonet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_title"
        android:background="@color/Black_transparent_black_percent_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/nonet_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="网络异常，请稍后重试"
            android:textColor="@color/Black_transparent_black_percent_80"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/send_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_send_submit"
        android:gravity="center"
        android:text="立即提交"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>