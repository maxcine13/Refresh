<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:background="@color/title_bg">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/titleIc"
            android:layout_width="@dimen/title_img_left"
            android:layout_height="@dimen/title_img_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titleTip"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_tipper"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/btn_black_10">

        <ImageView
            android:id="@+id/titleLoading"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/title_loading"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titleCity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/icon_down"
            android:gravity="center"
            android:textColor="@color/title_color_six"
            android:textSize="@dimen/title_text_left"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/titleBack"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_back"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:minWidth="50dp"
        android:paddingLeft="5dp"
        android:textColor="@color/title_color_six"
        android:textSize="@dimen/title_text_left" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/title_name_normal"
        android:textColor="@color/title_color_three"
        android:textSize="@dimen/title_text_center" />

    <TextView
        android:id="@+id/textsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/title_color_six"
        android:textSize="@dimen/title_text_left" />

    <TextView
        android:id="@+id/goLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="切换账号"
        android:visibility="gone"
        android:textColor="@color/title_color_six"
        android:textSize="@dimen/title_text_left" />

    <FrameLayout
        android:id="@+id/titleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_item_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_share" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/titleAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_item_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/title_img_right"
            android:layout_height="@dimen/title_img_right"
            android:src="@drawable/top_add" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/titleSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/menu_item_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/title_img_right"
            android:layout_height="@dimen/title_img_right"
            android:src="@drawable/top_search" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Black_transparent_black_percent_5" />
</RelativeLayout>