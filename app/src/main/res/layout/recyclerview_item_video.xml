<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.jierong.share.jcplayer.JCVideoPlayerStandard
        android:id="@+id/JCvp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/color_black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/video_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/btn_black_30"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_video_comment" />

            <TextView
                android:id="@+id/video_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black_transparent_black_percent_60"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/video_comment"
            android:background="@drawable/btn_black_30"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/video_love_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/video_love_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/Black_transparent_black_percent_60"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>